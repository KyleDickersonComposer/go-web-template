{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"lib": [
			"ES2022",
			"DOM"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"rootDir": "./ts",
		"strict": true,
		"noEmit": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true
	},
	"include": [
		"ts/**.ts",
		"ts/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}

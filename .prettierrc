{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": false,
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.html",
			"options": {
				"printWidth": 120,
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": "*.go",
			"options": {
				"parser": "go-template",
				"printWidth": 100
			}
		}
	]
}
